<p>
  <strong>Name:</strong>
  <%= @venue.name %>
</p>
 
<p>
  <strong>Address:</strong>
  <%= @venue.address %>
</p>
<p>
  <strong>City:</strong>
  <%= @venue.city %>
</p>
 
<p>
  <strong>Country:</strong>
  <%= @venue.country %>
</p>


<iframe
  width="400"
  height="300"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=<%= Manythrough::Application.config.api_key %>
    &q=<%= @venue.address %>,<%= @venue.city %>,<%= @venue.country %>" allowfullscreen>
</iframe>


<h2>Concerts held here</h2>
  <table>
  <tr>
    <th>Name</th>
    <th>Date</th>
  </tr>
  <% @venue.concerts.each do |concert| %>
    <tr>
      <td><%= link_to concert.name, concert_path(concert) %></td>
      <td><%= concert.date %></td>
    </tr>  
  <% end %>
</table>


<%= link_to 'Edit', edit_venue_path(@venue) %> |
<%= link_to 'Add another venue', new_venue_path %> |
<%= link_to 'Concert index', concerts_path %> |
<%= link_to 'Back', venues_path %>
