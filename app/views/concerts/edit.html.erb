<h1>Edit concert</h1>
 
<%= form_for @concert do |f| %>
 
  <% if @concert.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@concert.errors.count, "error") %> prohibited
        this concert from being saved:
      </h2>
      <ul>
        <% @concert.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

<h2>Setlist</h2>
  <% @concert.setlists.each do |setlist| %> 
     <%= f.fields_for :setlists, setlist do |ff| %>
     <%= ff.text_field :position %> 

      <%=setlist.song.title%>
<br>
     <% end %>
   <% end %>
  <p>
    <%= f.submit %>
  </p>
<% end %>


